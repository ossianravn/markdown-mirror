{
    "name": "wp-plugins/markdown-mirror",
    "description": "WordPress plugin that generates a Markdown mirror of site content and llms.txt file",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=7.4",
        "league/html-to-markdown": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "MarkdownMirror\\": "includes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
} 